<%- include('./partials/header') %>

<div class="w-full min-h-screen mt-10 flex flex-col lg:flex-row items-start px-6 md:px-20 py-10 gap-10">
  
  <!-- Left: Cart Items -->
  <div class="w-full lg:w-[60%] flex flex-col gap-8">
    <% if (cartItems && cartItems.length > 0) { %>
      <% let totalPrice = 0; %>
      <% cartItems.forEach(item => { 
           totalPrice += item.price;
      %>
      <div class="w-full rounded-md overflow-hidden shadow-md border border-gray-200">
        <div class="w-full h-80 flex items-center justify-center bg-gray-100">
          <% if (item.image) { %>
            <img 
              src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
              alt="<%= item.name %>"
              class="h-full object-contain"
            >
          <% } else { %>
            <p class="text-gray-400 italic">No Image</p>
          <% } %>
        </div>
        <div class="w-full flex justify-between items-center px-5 py-4 bg-white">
          <h3 class="text-2xl font-semibold"><%= item.name %></h3>
          <div class="flex items-center gap-2">
            <a href="/cart/add/<%= item._id %>" class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center hover:bg-gray-300 ri-add-line"></a>
            <div class="px-3 py-1 rounded-md bg-gray-100 text-black">01</div>
            <a href="/cart/remove/<%= item._id %>" class="w-7 h-7 bg-gray-200 flex rounded-full items-center justify-center hover:bg-gray-300 ri-subtract-line"></a>
          </div>
        </div>
        <div class="flex items-center justify-between px-5 py-3 bg-gray-50">
          <h4 class="text-lg">Net Total</h4>
          <h2 class="text-lg font-semibold">₹ <%= item.price %></h2>
        </div>
      </div>
      <% }) %>
    <% } else { %>
      <div class="text-center text-gray-500 text-lg mt-10">Your cart is empty.</div>
    <% } %>
  </div>

  <!-- Right: Price Breakdown -->
  <% if (cartItems && cartItems.length > 0) { %>
    <% let totalMRP = 0;
       cartItems.forEach(item => totalMRP += item.price);
       const discount = 0;
       const platformFee = 20;
       const shipping = 0;
       const total = totalMRP - discount + platformFee + shipping;
    %>

    <div class="w-full lg:w-[40%] bg-white rounded-md shadow-md p-6">
      <h3 class="text-xl font-semibold mb-4">Price Breakdown</h3>

      <div class="space-y-3">
        <div class="flex justify-between">
          <h4>Total MRP</h4>
          <h4>₹ <%= totalMRP %></h4>
        </div>
        <div class="flex justify-between">
          <h4>Discount on MRP</h4>
          <h4>₹ <%= discount %></h4>
        </div>
        <div class="flex justify-between">
          <h4>Platform Fee</h4>
          <h4>₹ <%= platformFee %></h4>
        </div>
        <div class="flex justify-between">
          <h4>Shipping Fee</h4>
          <h4><%= shipping === 0 ? 'FREE' : '₹ ' + shipping %></h4>
        </div>
      </div>

      <div class="w-full h-[1px] bg-gray-300 my-6"></div>

      <div class="flex justify-between">
        <h3 class="text-xl font-semibold">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">₹ <%= total %></h3>
      </div>

      <form action="/checkout" method="POST" class="mt-6">
        <button 
          type="submit" 
          class="w-full py-3 rounded-md bg-red-500 hover:bg-red-600 text-white font-semibold transition">
          Proceed to Checkout
        </button>
      </form>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
