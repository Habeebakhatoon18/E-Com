<%- include('./partials/header') %>

<div class="w-full min-h-screen flex flex-col md:flex-row px-6 md:px-20 py-20 gap-10">

  <!-- Sidebar -->
  <div class="w-full md:w-[25%] mt-5 flex flex-col items-start">
    <div class="flex items-center gap-2">
      <h3 class="font-semibold">Sort by</h3>
      <form action="/shop">
        <select class="border px-2 py-1 rounded-md" name="sortby">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <div class="flex flex-col mt-10 space-y-2">
      <a class="hover:text-blue-500" href="">New Collection</a>
      <a class="hover:text-blue-500" href="">All Products</a>
      <a class="hover:text-blue-500" href="">Discounted Products</a>
    </div>

    <div class="mt-10 space-y-2">
      <h4 class="font-semibold">Filter by:</h4>
      <a class="hover:text-blue-500" href="">Availability</a>
      <a class="hover:text-blue-500" href="">Discount</a>
    </div>
  </div>

  <!-- Products Section -->
  <div class="w-full mt-5 md:w-[75%]">
    <% if (products.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% products.forEach(function(product){ %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden flex flex-col justify-between">
            <div class="w-full h-64 bg-gray-100 flex items-center justify-center">
              <% if (product.image) { %>
                <img class="h-full object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
              <% } else { %>
                <div class="text-gray-400 italic">No Image</div>
              <% } %>
            </div>

            <div class="flex flex-col justify-between bg-[#1A2238] text-[#F8F8F8] px-4 py-3 min-h-[100px]">
              <div>
                <h3 class="font-semibold leading-tight truncate"><%= product.name %></h3>
                <h4 class="text-lg">₹ <%= product.price %></h4>
                <% if (product.discount && product.discount != 0) { %>
                  <h4 class="text-sm text-[##F8F8F8]">Discount: ₹ <%= product.discount %></h4>
                <% } %>
              </div>
              <div class="flex justify-end mt-2">
                <a href="/add-to-cart/<%= product._id %>" class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-[#333333] hover:bg-gray-100 transition">
                  <i class="ri-add-line text-lg"></i>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <h2 class="text-gray-500 text-center text-lg mt-10">No products available</h2>
    <% } %>
  </div>
</div>

<%- include('./partials/footer') %>
